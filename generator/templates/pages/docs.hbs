
{{>subnavbar}}

<div class="row">
    <div class="span12">
        <section id="gettingstarted">
            <h1>Getting started</h1>    
            {{>getstarted}}
        </section>
        <hr>
        <section id="editable">
            <h1>$().editable(options)</h1>
            <p>{{{classes.editable.description}}}</p>
            {{#with myClasses.editable}}
            {{>classtabs}}
            {{/with}}
        </section>
        <hr>
        <section id="editableContainer">
            <h1>$().editableContainer(options)</h1>
            <p>{{{classes.editableContainer.description}}}</p>
            {{#with myClasses.editableContainer}}
            {{>classtabs}}
            {{/with}}
        </section>
        <hr>
        <section id="inputs">
            <h1>Inputs</h1>
            <p>There are several <i>input types</i> supported by library. Each type may have additional configuration options.<br>
            Input options are defined as well as other parameters of <code>$().editable()</code> method.<br>
            Currently supported:
            </p>
            <ul>
            {{#each inputs}}
            <li>{{name}}</li>
            {{/each}}       
            </ul>
    
        </section> 
                   
            {{#each inputs}}
             <section id="{{name}}">
                <h2>{{name}}</h2>
                <p>{{md description}}</p>
                {{>inputtabs}}
                </section>
            {{/each}}            

        <hr>
        <section id="newrecord">
            <h1>Creating new record</h1>
            {{>newrecord}}
        </section>
        <hr>
        <section id="diagram">
            <h1>Class diagram</h1>    
            {{>diagram}}
        </section>
        <br>        
        <p>If you have questions, ideas or find a bug - please feel free to open issue on <a href="{{project.homepage}}/issues" target="_blank">X-editable github page</a>.</p>
    </div>
</div>